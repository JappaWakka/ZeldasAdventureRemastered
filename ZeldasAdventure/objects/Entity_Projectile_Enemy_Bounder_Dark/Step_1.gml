/// @description Set Directional Sprite

switch direction
{
	case global.Directions.East :
		sprite_index = Sprite_Projectile_Bounder_Dark_East
		break;
	case global.Directions.South :
		sprite_index = Sprite_Projectile_Bounder_Dark_South
		break;
	case global.Directions.West :
		sprite_index = Sprite_Projectile_Bounder_Dark_West
		break;
	case global.Directions.North :
		sprite_index = Sprite_Projectile_Bounder_Dark_North
		break;
}







