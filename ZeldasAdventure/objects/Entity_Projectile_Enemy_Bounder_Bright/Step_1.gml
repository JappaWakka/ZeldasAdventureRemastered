/// @description Set Directional Sprite

switch direction
{
	case global.Directions.East :
		sprite_index = Sprite_Projectile_Bounder_Bright_East
		break;
	case global.Directions.South :
		sprite_index = Sprite_Projectile_Bounder_Bright_South
		break;
	case global.Directions.West :
		sprite_index = Sprite_Projectile_Bounder_Bright_West
		break;
	case global.Directions.North :
		sprite_index = Sprite_Projectile_Bounder_Bright_North
		break;
}







